{
	"version": "2.1.5",
	"compilerOptions": {
		"declaration": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"jsx": "react",
		"jsxFactory": "tsx",
		"lib": [
			"dom",
			"es5",
			"es2015.promise",
			"es2015.iterable",
			"es2015.symbol",
			"es2015.symbol.wellknown",
			"esnext"
		],
		"module": "umd",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"outDir": "_build/",
		"removeComments": false,
		"importHelpers": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"target": "es5",
		"types": [ "intern" ],
		"noImplicitAny": false
	},
	"include": [
		"./src/**/*.ts",
		"./src/styles/*.d.ts",
		"./tests/**/*.ts",
		"node_modules"
	]
}
